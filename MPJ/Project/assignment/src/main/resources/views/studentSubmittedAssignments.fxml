<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER"
      prefWidth="600" prefHeight="400"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.miniProject.controllers.StudentSubmittedAssignmentsController">

    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Label text="Your Submitted (Ungraded) Assignments" styleClass="header-label"/>
    <ListView fx:id="submittedListView" prefHeight="200" prefWidth="500"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Delete Selected Submission" onAction="#deleteSelectedSubmission"/>
        <Button text="Go Back" onAction="#goBack"/>
    </HBox>
</VBox>
