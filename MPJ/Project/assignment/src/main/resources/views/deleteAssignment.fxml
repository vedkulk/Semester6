<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER"
    prefWidth="600" prefHeight="400"
    styleClass="panel"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.miniProject.controllers.DeleteAssignmentController">

    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Label text="Delete Assignment" styleClass="header-label"/>
    <Separator prefWidth="200" />

    <!-- ComboBox or ListView for selecting assignment -->
    <ComboBox fx:id="assignmentsComboBox" prefWidth="200" />

    <Button text="Delete Assignment" onAction="#deleteAssignment" prefWidth="200"/>
    <Button text="Go Back" onAction="#goBack" prefWidth="200"/>

</VBox>
