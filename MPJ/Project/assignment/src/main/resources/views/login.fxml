<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" 
      prefWidth="600" prefHeight="400"
      styleClass="login-panel"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.miniProject.controllers.LoginController">

    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>
    
    <Label text="Login" styleClass="header-label">
        <font>
            <Font size="28.0" name="System Bold"/>
        </font>
    </Label>
    
    <Separator prefWidth="200" />
    
    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="90" prefWidth="100" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
        </columnConstraints>
        
        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" promptText="Enter your email" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        
        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </GridPane>
    
    <HBox spacing="15" alignment="CENTER">
        <Button text="Login" fx:id="loginButton" onAction="#handleLogin" prefWidth="150" styleClass="action-button" defaultButton="true" />
        <Button text="Register" onAction="#openRegister" prefWidth="150" styleClass="secondary-button" />
    </HBox>
    
    <Label fx:id="statusLabel" text="" styleClass="status-label" />
</VBox>